<% if flash[:notice] %>
  <h4 class="flash"><%=flash[:notice]%></h4>
<%end%>


<div>
  <%= form_for @recipe do |f| %>
    <p class="rainbow"><%= f.label "Name" %></p>
    <p><%= f.text_field :name %></p>
    <br>
    <p class="rainbow"><%= f.label "Category" %></p>
    <p><%= f.select :category, collection: ["breakfast", "lunch"], prompt: "Select the category "  %></p>
    <br>
    <p class="rainbow"><%= f.label "Instructions" %></p>
    <p><%= f.text_area :description %></p>
    <p><%= f.collection_check_boxes :food_ids, Food.all, :id, :name %></p>
    <%=f.submit%>
  <%end%>
</div>

<style>
input[type=text] {
  border: 2px solid red;
  border-radius: 4px;
}
</style>