
<center>
<% if flash[:notice] %>
  <h3><%=flash[:notice]%></h3>
<%end%>


<div>
<!--

  -->



<p>
  <%= form_for @recipe do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>
  <%= f.select :category, collection: ["breakfast", "lunch"], prompt: "Select the category "  %>
    <p><%= f.label "Description" %>
    <%= f.text_area :description %>
    <%= f.collection_check_boxes :food_ids, Food.all, :id, :name %>

      <p>

      <%=f.submit%>

      <%end%>


</div>

<style>
input[type=text] {
  border: 2px solid red;
  border-radius: 4px;
}
</style>


</center>
