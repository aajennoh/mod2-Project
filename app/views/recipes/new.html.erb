<% if flash[:notice] %>
  <h3><%=flash[:notice]%></h3>
<%end%>




<%= form_for @recipe do |f| %>
          <p><%= f.label "Name" %>
          <%= f.text_field :name %></p>
        <p class="rainbow"><%= f.label "Description" %>
        <%= f.text_area :description %><p>
       <%= f.collection_check_boxes :food_ids, Food.all, :id, :name %>
          <%= f.submit %>
<% end %>
